<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Properties>
        <Property name="basePath">target/generated-sources/eventlogs/</Property>
    </Properties>
 
    <Appenders>
        <RandomAccessFile  name="fileLogger" fileName="${basePath}/fluxtionfx-audit.log" append="false" immediateFlush="true">
            <PatternLayout>
                <pattern>%msg%n</pattern>
            </PatternLayout>
        </RandomAccessFile>
 
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
<!--        <Logger name="fluxtion.eventLog" level="debug" additivity="false">
            <appender-ref ref="fileLogger" level="debug" />
        </Logger>-->
        <Root level="info" additivity="false">
            <appender-ref ref="console" />
        </Root>
    </Loggers>
</Configuration>
